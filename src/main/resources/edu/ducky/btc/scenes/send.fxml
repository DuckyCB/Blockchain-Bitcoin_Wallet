<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #404040;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ducky.btc.scenes.SendController">
   <children>
      <Label layoutX="222.0" layoutY="59.0" text="Enviar BTC" textFill="WHITE">
         <font>
            <Font name="Cambria Bold" size="50.0" />
         </font>
      </Label>
      <TextField fx:id="fieldAddressSend" layoutX="100.0" layoutY="172.0" prefHeight="25.0" prefWidth="500.0" promptText="Address a enviar" />
      <TextField fx:id="fieldBTCSend" layoutX="100.0" layoutY="260.0" prefHeight="25.0" prefWidth="500.0" promptText="Cantidad de BTC a enviar" />
      <Label layoutX="100.0" layoutY="298.0" text="Valor de la transacción:" textFill="#cdcdcd">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="labelBTCValue" layoutX="315.0" layoutY="298.0" text="0.00000000" textFill="#cdcdcd">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="buttonSend" layoutX="293.0" layoutY="378.0" mnemonicParsing="false" onAction="#pressedSend" text="ENVIAR">
         <font>
            <Font name="Cambria" size="24.0" />
         </font>
      </Button>
      <Label layoutX="100.0" layoutY="230.0" text="BTC disponibles:" textFill="#cdcdcd">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="labelBTCAvailable" layoutX="315.0" layoutY="230.0" text="0.00000000" textFill="#cdcdcd">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="buttonBack" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#pressedBack" style="-fx-background-color: #cdcdcd;" text="Atrás" />
   </children>
</AnchorPane>
